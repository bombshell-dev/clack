{
  "name": "@clack/root",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@7.6.0",
  "scripts": {
    "stub": "pnpm -r run prepack --stub",
    "build": "pnpm run build:core && pnpm run build:prompts",
    "build:core": "pnpm --filter @clack/core run prepack",
    "build:prompts": "pnpm --filter @clack/prompts run prepack",
    "start": "pnpm --filter @example/basic run start",
    "cleanup": "rimraf 'packages/**/node_modules' 'examples/**/node_modules' 'node_modules'",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.2",
    "@changesets/cli": "^2.26.0",
    "@types/node": "18",
    "eslint": "^8.34.0",
    "merge2": "^1.4.1",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5",
    "unbuild": "^1.1.1"
  },
  "volta": {
    "node": "16.19.0"
  }
}
