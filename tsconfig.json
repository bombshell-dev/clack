{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["node"]
  },
  "exclude": [
    "**/dist/**",
    "**/examples/**"
  ]
}
