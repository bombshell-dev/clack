{
  "compilerOptions": {
    "noEmit": true,
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["packages"]
}
