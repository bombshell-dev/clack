{
  "compilerOptions": {
    "noEmit": true,
    "module": "node16",
    "target": "ESNext",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["ES2022"],
    "paths": {
      "@clack/core": ["./packages/core/src"]
    }
  },
  "include": ["packages"]
}
